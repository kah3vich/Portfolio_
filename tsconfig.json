{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/app/*": ["./src/app/*"],
			"@/processes/*": ["./src/processes/*"],
			"@/pages/*": ["./src/pages/*"],
			"@/widgets/*": ["./src/widgets/*"],
			"@/entities/*": ["./src/entities/*"],
			"@/shared/*": ["./src/shared/*"],
			"@/public/*": ["./public/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "components/SceneTJ/index.jsx"],
	"exclude": ["node_modules"]
}
